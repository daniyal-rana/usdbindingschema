#usda 1.0

def Scope "EnvironmentalSensors" (
    prepend apiSchemas = ["MQTTBindingAPI"]
)
{
    def Cube "HumiditySensor_001"
    {
        string deviceName = "sensor001"

        # MQTT: Humidity sensor data - Simple MQTT schema
        double humidity = 0.0 (
            customData = {
                dictionary mqtt = {
                    string broker = "localhost:1883"
                    string topic = "sensors/humidity"
                    string jsonPath = "$.measurements.humidity"
                    string unit = "percent"
                    string description = "Environmental humidity sensor"
                    int qos = 1
                    bool enabled = true
                }
            }
        )
    }

    def Sphere "PressureSensor_001"
    {
        string deviceName = "pressure001"

        # MQTT: Simple pressure reading - Simple MQTT schema
        double pressure = 0.0 (
            customData = {
                dictionary mqtt = {
                    string broker = "localhost:1883"
                    string topic = "environment/pressure"
                    string jsonPath = "$.pressure"
                    string unit = "hPa"
                    string description = "Atmospheric pressure sensor"
                    int qos = 0
                    bool enabled = true
                }
            }
        )

        string location = "" (
            customData = {
                dictionary mqtt = {
                    string broker = "localhost:1883"
                    string topic = "environment/pressure"
                    string jsonPath = "$.location"
                    string description = "Sensor location identifier"
                    bool enabled = true
                }
            }
        )
    }
}
