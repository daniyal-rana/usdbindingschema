{
  "auth_type": "oauth2",
  "client_id": "${AZURE_CLIENT_ID}",
  "client_secret": "${AZURE_CLIENT_SECRET}",
  "tenant_id": "${AZURE_TENANT_ID}",
  "token_endpoint": "https://login.microsoftonline.com/${AZURE_TENANT_ID}/oauth2/v2.0/token",
  "scope": "https://analysis.windows.net/powerbi/api/.default",
  "grant_type": "client_credentials",
  "token_cache": {
    "enabled": true,
    "cache_file": ".cache/azure-fabric-token.json",
    "refresh_threshold_seconds": 600
  },
  "request_config": {
    "timeout_seconds": 45,
    "retry_attempts": 3,
    "retry_delay_seconds": 2
  },
  "token_format": {
    "header_name": "Authorization",
    "header_value_template": "Bearer {access_token}"
  },
  "additional_headers": {
    "Content-Type": "application/json",
    "Accept": "application/json"
  },
  "environment_variables": {
    "client_id_env": "AZURE_CLIENT_ID",
    "client_secret_env": "AZURE_CLIENT_SECRET",
    "tenant_id_env": "AZURE_TENANT_ID"
  },
  "metadata": {
    "description": "Azure Fabric data warehouse OAuth2 configuration",
    "service": "Microsoft Fabric",
    "workspace": "production-analytics",
    "created": "2025-07-25T00:00:00Z"
  }
}
