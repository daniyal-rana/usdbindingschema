{
  "auth_type": "connection_string",
  "connection_string": "Driver={ODBC Driver 18 for SQL Server};Server=${SQL_SERVER};Database=${SQL_DATABASE};Authentication=ActiveDirectoryServicePrincipal;UID=${AZURE_CLIENT_ID};PWD=${AZURE_CLIENT_SECRET};Encrypt=yes;TrustServerCertificate=no;Connection Timeout=30;",
  "driver": "ODBC Driver 18 for SQL Server",
  "connection_config": {
    "timeout_seconds": 30,
    "retry_attempts": 3,
    "retry_delay_seconds": 2,
    "connection_pooling": true,
    "max_pool_size": 10,
    "min_pool_size": 1
  },
  "authentication": {
    "method": "azure_service_principal",
    "tenant_id": "${AZURE_TENANT_ID}",
    "client_id": "${AZURE_CLIENT_ID}",
    "client_secret": "${AZURE_CLIENT_SECRET}"
  },
  "server_config": {
    "server": "${SQL_SERVER}",
    "database": "${SQL_DATABASE}",
    "port": 1433,
    "encrypt": true,
    "trust_server_certificate": false
  },
  "environment_variables": {
    "server_env": "SQL_SERVER",
    "database_env": "SQL_DATABASE",
    "client_id_env": "AZURE_CLIENT_ID",
    "client_secret_env": "AZURE_CLIENT_SECRET",
    "tenant_id_env": "AZURE_TENANT_ID"
  },
  "query_config": {
    "default_timeout_seconds": 300,
    "max_rows": 10000,
    "fetch_size": 1000
  },
  "metadata": {
    "description": "Azure Fabric data warehouse connection",
    "service": "Microsoft Fabric",
    "workspace": "smart-building-analytics",
    "server_location": "East US 2",
    "contact": "data-team@company.com",
    "created": "2025-07-25T00:00:00Z"
  }
}
