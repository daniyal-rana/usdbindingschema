# Environment Variables Template for USD Binding Protocol Extension
# Copy this file to .env and set your actual credentials
# NEVER commit .env file to version control!

# Weather API Credentials
# Get these from your weather service provider (e.g., WeatherAPI.com, OpenWeatherMap)
WEATHER_API_CLIENT_ID=your_weather_api_client_id_here
WEATHER_API_CLIENT_SECRET=your_weather_api_client_secret_here
WEATHER_SERVICE_API_KEY=your_weather_api_key_here

# Azure/Microsoft Fabric Credentials
# Get these from Azure Active Directory app registration
AZURE_CLIENT_ID=your_azure_app_client_id_here
AZURE_CLIENT_SECRET=your_azure_app_client_secret_here
AZURE_TENANT_ID=your_azure_tenant_id_here

# Building Management System Credentials
BUILDING_MGMT_CLIENT_ID=your_building_mgmt_client_id_here
BUILDING_MGMT_CLIENT_SECRET=your_building_mgmt_client_secret_here

# IoT Platform Credentials
IOT_PLATFORM_TOKEN=your_iot_platform_bearer_token_here

# SQL Database Connection Parameters
SQL_SERVER=your_sql_server_hostname_here
SQL_DATABASE=your_database_name_here

# MQTT Certificate Password (if certificates are password protected)
MQTT_CERT_PASSWORD=your_certificate_password_here

