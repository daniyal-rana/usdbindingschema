{
  "auth_type": "apikey",
  "api_key": "${IOT_PLATFORM_TOKEN}",
  "key_location": "header",
  "key_name": "Authorization",
  "key_prefix": "Bearer ",
  "additional_headers": {
    "Content-Type": "application/json",
    "Accept": "application/json",
    "X-Client-Version": "1.0.0"
  },
  "rate_limiting": {
    "requests_per_second": 10,
    "burst_limit": 50,
    "concurrent_connections": 5
  },
  "request_config": {
    "timeout_seconds": 60,
    "retry_attempts": 2,
    "retry_delay_seconds": 2,
    "keep_alive": true
  },
  "environment_variables": {
    "api_key_env": "IOT_PLATFORM_TOKEN"
  },
  "endpoints": {
    "base_url": "https://api.iotplatform.com/v2",
    "devices": "/devices",
    "telemetry": "/telemetry",
    "commands": "/commands",
    "alerts": "/alerts"
  },
  "metadata": {
    "description": "IoT platform API access token",
    "service": "Industrial IoT Platform",
    "account": "smart-building-prod",
    "contact": "iot-support@company.com",
    "created": "2025-07-25T00:00:00Z"
  }
}
